{% extends 'layout.twig' %}

{% block content %}

    <a href="/users/create">Create user</a>

    <h4>List of users:</h4>

    <ul class="collection">
        {% for user in users %}
            <li class="collection-item avatar">
                <span class="title">{{ user.name }}</span>
                <p class="title">{{ user.id }}</p>
                <p><a href="/users/{{ user.id }}">View more</a></p>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
